<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivTabLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/list_24" />

    <TextView
        android:id="@+id/tvTabLogoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재생목록"
        app:layout_constraintEnd_toEndOf="@+id/ivTabLogo"
        app:layout_constraintStart_toStartOf="@+id/ivTabLogo"
        app:layout_constraintTop_toBottomOf="@+id/ivTabLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>